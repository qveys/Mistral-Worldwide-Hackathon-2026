{
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist",
        "module": "nodenext",
        "target": "esnext",
        "lib": ["esnext"],
        "strict": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "verbatimModuleSyntax": true,
        "isolatedModules": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*.ts"]
}
