{
    "name": "echomaps-root",
    "private": true,
    "workspaces": ["app/backend", "app/frontend", "app/packages/shared"],
    "scripts": {
        "dev:backend": "npm run dev -w app/backend",
        "dev:frontend": "npm run dev -w app/frontend",
        "dev": "concurrently --kill-others \"npm run dev:backend\" \"npm run dev:frontend\"",
        "build": "concurrently \"npm run build -w app/backend\" \"npm run build -w app/frontend\"",
        "docker:up": "docker compose up --build",
        "start": "npm run start -w app/backend"
    },
    "devDependencies": {
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.6",
        "@types/node": "^25.3.2",
        "concurrently": "^9.1.2",
        "ts-node-dev": "^2.0.0"
    }
}
